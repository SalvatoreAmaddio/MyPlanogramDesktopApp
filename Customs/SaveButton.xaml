<Button x:Class="Testing.Customs.SaveButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Testing.Customs"
             xmlns:customs="clr-namespace:Testing.Customs"   
             mc:Ignorable="d"
             Command="{Binding RelativeSource={RelativeSource AncestorType=customs:Lista}, Path=DataContext.SaveRecordCMD}" 
             CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=DataContext}"
             ToolTip="Save"    
             Height="30"
             >
        <Image Source="/Images/save.png"/>
</Button>


